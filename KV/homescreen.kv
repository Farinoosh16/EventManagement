#: import utils kivy.utils

<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#FFFFFF")
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#808080")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows:1
            pos_hint:{"top":1,"left":1}
            size_hint: 1.8,.1
            Image:
                source:"icons/Logo_Red_Yellow.png"
        Label:
            pos_hint:{"top":1,"left":1}
            size_hint: 1,.1
            text: root.t
            multiline: False
            write_tab: False
        Label:
            # upcoming events
            pos_hint:{"top":.9,"left":1}
            size_hint: 1,.1
            text: " upcoming events"
            font_size: 32
            color:(211,211,211)
            bold: True
            italic: False
            id:events_label
        ScrollView:
            bar_width: 10
            pos_hint: {"top": .8, "left": 1}
            size_hint: 1, .8
            GridLayout:
                # Banner grid
                id: banner_grid
                cols: 1
                spacing: 5,5
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True



        GridLayout:
            # add 4 menu buttons
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#808080")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows:1
            pos_hint:{"top":.2,"left":1}
            size_hint: 1,.2
            ImageButton:
                source: "icons/Add Event.png"
                size_hint: .4,.2
                on_release:
                    app.change_screen("add_event_screen")
            ImageButton:
                source: "icons/google_maps_circle_track_desktop_thumb.png"
                size_hint: .4,.2
                on_release:
                    print("ok dude")
                    app.change_screen("location_screen")
            ImageButton:
                source: "icons/Open Profile Icon.png"
                size_hint: .4,.2
                on_release:
                    app.change_screen("profile_screen")

            ImageButton:
                source: "icons/Enter chat icon.png"
                size_hint: .4,.2
                on_release:
                    print("ok dude")
                    app.change_screen("chat_screen")





