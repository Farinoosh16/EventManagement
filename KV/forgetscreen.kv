<ForgetScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#9932CC")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        TextInput:
            id: forget_password
            hint_text: "enter your email address"
            size_hint: .8,.1
            pos_hint: {"top" : .9 , "right" : .9}
        LabelButton:
            text: "[u]Back[/u]"
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: .2, .1
            pos_hint: {"top": .1, "right": .6}
            markup: True
            on_release:
                app.change_screen("login_screen")
