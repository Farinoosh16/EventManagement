<LoginScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#9932CC")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows:1
            pos_hint:{"top":1,"left":.5}
            size_hint: 1,.3
            Image:
                source:"icons/Logo_Red_Yellow.png"

        TextInput:

            id: login_email
            hint_text: "email"
            size_hint: .8,.1
            pos_hint: {"top" : .7 , "right" : .9}
        TextInput:
            id: login_password
            password: True
            hint_text: "password"
            size_hint: .8,.1
            pos_hint: {"top" : .59 , "right" : .9}
        Label:
            id: login_message
            color:(1,0,0,1)
            size_hint: .8,.1
            pos_hint: {"top" : .4 , "right" : .9}
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#9932CC") if self.state=='normal' else utils.get_color_from_hex("#3244AA")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text:"[u]not login yet? create an account[/u]"
            markup: True
            size_hint: .8,.1
            pos_hint: {"top" : .2 , "right" : .9}
            on_release:
                app.my_firebase.sign_up(login_email.text , login_password.text)
        LabelButton:
            text:"WAZZ my password?"
            markup: True
            size_hint: .7,.1
            pos_hint:{"top": .3, "left" : .9}
            on_release:
                app.change_screen("forget_screen")






